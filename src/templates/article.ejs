<div
  style="
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    color: #333;
  "
>
  <div
    style="
      margin: 15px auto;
      padding: 15px 20px;
      border-left: 3px solid #07c160;
    "
  >
    <div
      style="
        font-size: 16px;
        font-weight: bold;
        color: #1a1a1a;
        margin-bottom: 15px;
        padding-left: 8px;
      "
    >
      📑 目录
    </div>
    <% articles.forEach((article, index) => { %>
    <div
      style="
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 8px 0;
        padding: 0 10px;
      "
    >
      <span style="color: #07c160; font-weight: 500; flex-shrink: 0;"><%= index + 1 %>.</span>
      <span style="
        color: #333;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: calc(100% - 30px);
      ">
        <%= article.title %>
      </span>
    </div>
    <% }); %>
  </div>
  <% articles.forEach((article, index) => { %>
  <div style="margin-bottom: 40px;">
    <div
      style="
        font-size: 18px;
        font-weight: bold;
        color: #1a1a1a;
        margin: 0 0 15px;
        padding-left: 12px;
        border-left: 3px solid #07c160;
      "
    >
      <%= article.title %>
    </div>
    <div
      style="
        display: flex;
        align-items: center;
        font-size: 12px;
        color: #666;
        margin: 12px 0;
        padding: 0 15px;
      "
    >
      <i
        style="
          display: inline-block;
          width: 14px;
          height: 14px;
          margin-right: 4px;
          vertical-align: middle;
        "
        >📅</i
      >
      <span style="vertical-align: middle"><%= article.publishDate %></span>
    </div>
    <div
      style="
        font-size: 15px;
        line-height: 2;
        color: #2c3e50;
        margin: 15px 0;
        padding: 0 15px;
        text-align: justify;
        font-family: 'PingFang SC', 'Microsoft YaHei', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        letter-spacing: 0.5px;
      "
    >
      <%
        // Split content by double newlines to separate paragraphs
        const paragraphs = article.content
          .replace(/<next_paragraph\/>/g, '\n\n')  // 将标记转换为双换行
          .split(/\n\s*\n/)  // 按照一个或多个空行分割段落
          .map(p => p.trim())
          .filter(p => p.length > 0);
        
        paragraphs.forEach((paragraph, i) => {
      %>
        <div style="text-indent: 2em; margin-bottom: 1em;"><%= paragraph %></div>
      <% }); %>
    </div>
  </div>
  <% }); %>
</div>
